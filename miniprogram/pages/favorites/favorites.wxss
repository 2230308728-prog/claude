/* pages/favorites/favorites.wxss */

/* 页面标题 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f5f5f5;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.count {
  font-size: 26rpx;
  color: #999;
}

/* 收藏列表 */
.favorites-list {
  padding: 20rpx;
}

.favorite-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

/* 产品信息 */
.product-info {
  display: flex;
  padding: 24rpx;
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.product-detail {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-tags {
  margin: 8rpx 0;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #fa5151;
}

.product-stock {
  font-size: 24rpx;
  color: #07c160;
}

.product-stock.out-of-stock {
  color: #999;
}

/* 操作按钮 */
.item-actions {
  display: flex;
  gap: 16rpx;
  padding: 0 24rpx 24rpx;
}

.btn-action {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 36rpx;
  font-size: 28rpx;
  border: none;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-buy {
  background-color: #07c160;
  color: #fff;
}

.btn-buy[disabled] {
  background-color: #ccc;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 60rpx;
}

.btn-go-shop {
  padding: 24rpx 80rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 28rpx;
  border: none;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.btn-manage,
.btn-delete-selected,
.btn-add-cart {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-manage {
  background-color: #f5f5f5;
  color: #666;
}

.btn-delete-selected {
  background-color: #fa5151;
  color: #fff;
}

.btn-add-cart {
  background-color: #07c160;
  color: #fff;
}
