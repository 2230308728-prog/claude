/* pages/product/product.wxss */

/* 产品图片 */
.product-images {
  width: 100%;
  height: 750rpx;
  background-color: #f5f5f5;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* 产品基本信息 */
.product-info {
  background-color: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.product-header {
  margin-bottom: 20rpx;
}

.product-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.product-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.product-price-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.product-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #fa5151;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.product-sales {
  margin-left: auto;
  font-size: 28rpx;
  color: #999;
}

.product-stock {
  font-size: 28rpx;
  color: #666;
}

/* 产品详情 */
.product-detail {
  background-color: #fff;
  padding-bottom: 120rpx;
}

.detail-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.detail-content {
  padding: 32rpx;
}

.detail-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 详细信息 */
.detail-info {
  margin-bottom: 32rpx;
}

.info-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 行程安排 */
.itinerary {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.itinerary-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.itinerary-time {
  width: 140rpx;
  font-size: 26rpx;
  color: #07c160;
  flex-shrink: 0;
}

.itinerary-content {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 费用说明 */
.cost-info {
  margin-bottom: 32rpx;
}

.cost-item {
  margin-bottom: 20rpx;
}

.cost-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.cost-value {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding-left: 20rpx;
}

/* 注意事项 */
.notice {
  background-color: #fff7e8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.notice-content {
  display: block;
  font-size: 26rpx;
  color: #ff976a;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bar-left {
  display: flex;
  gap: 48rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #666;
}

.bar-right {
  flex: 1;
  margin-left: 32rpx;
}

.btn-buy {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  text-align: center;
}

.btn-buy[disabled] {
  background: #ccc;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #999;
}
