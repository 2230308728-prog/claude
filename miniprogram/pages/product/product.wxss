/* pages/product/product.wxss */

/* 产品图片 */
.product-images {
  width: 100%;
  height: 750rpx;
  background-color: #f5f5f5;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* 产品基本信息 */
.product-info {
  background-color: #fff;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.product-header {
  margin-bottom: 20rpx;
}

.product-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.product-tags {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.product-price-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.product-price {
  font-size: 48rpx;
  font-weight: bold;
  color: #fa5151;
}

.original-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.product-sales {
  margin-left: auto;
  font-size: 28rpx;
  color: #999;
}

.product-stock {
  font-size: 28rpx;
  color: #666;
}

/* 产品详情 */
.product-detail {
  background-color: #fff;
  padding-bottom: 120rpx;
}

.detail-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.detail-content {
  padding: 32rpx;
}

.detail-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 32rpx;
}

/* 详细信息 */
.detail-info {
  margin-bottom: 32rpx;
}

.info-row {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 行程安排 */
.itinerary {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.itinerary-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.itinerary-time {
  width: 140rpx;
  font-size: 26rpx;
  color: #07c160;
  flex-shrink: 0;
}

.itinerary-content {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 费用说明 */
.cost-info {
  margin-bottom: 32rpx;
}

.cost-item {
  margin-bottom: 20rpx;
}

.cost-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.cost-value {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding-left: 20rpx;
}

/* 注意事项 */
.notice {
  background-color: #fff7e8;
  border-radius: 12rpx;
  padding: 24rpx;
}

.notice-content {
  display: block;
  font-size: 26rpx;
  color: #ff976a;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bar-left {
  display: flex;
  gap: 48rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 22rpx;
  color: #666;
}

.bar-right {
  flex: 1;
  margin-left: 32rpx;
}

.btn-buy {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  text-align: center;
}

.btn-buy[disabled] {
  background: #ccc;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #999;
}

/* 用户评价 */
.reviews-section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.section-header .section-title {
  margin-bottom: 0;
}

.rating-summary {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.rating-score {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff976a;
}

.rating-count {
  font-size: 24rpx;
  color: #999;
}

.review-total {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #666;
}

/* 评分分布 */
.rating-distribution {
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.rating-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.rating-item:last-child {
  margin-bottom: 0;
}

.star-label {
  display: flex;
  align-items: center;
  gap: 4rpx;
  width: 100rpx;
  flex-shrink: 0;
}

.star-label .star {
  font-size: 24rpx;
  color: #999;
}

.star-text {
  font-size: 24rpx;
  color: #999;
}

.rating-bar {
  flex: 1;
  height: 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  overflow: hidden;
}

.rating-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff976a 0%, #ff6b00 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.rating-item .rating-count {
  width: 60rpx;
  text-align: right;
  font-size: 24rpx;
  color: #999;
  flex-shrink: 0;
  margin-left: 0;
}

/* 评价列表 */
.reviews-list {
  padding: 32rpx;
}

.review-item {
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.review-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.review-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.reviewer-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.reviewer-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.review-rating {
  display: flex;
  gap: 4rpx;
}

.review-rating .star {
  font-size: 24rpx;
  color: #ddd;
}

.review-rating .star.filled {
  color: #ff976a;
}

.review-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.review-images {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}

.review-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.review-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.review-date {
  font-size: 24rpx;
  color: #999;
}

.admin-reply {
  margin-top: 16rpx;
  padding: 20rpx;
  background-color: #f7f7f7;
  border-radius: 12rpx;
}

.reply-label {
  display: block;
  font-size: 24rpx;
  color: #07c160;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.reply-content {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 查看更多评价 */
.view-more-reviews {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 24rpx 32rpx;
  margin: 0 32rpx;
  background-color: #f7f7f7;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.view-more-reviews .arrow {
  font-size: 36rpx;
  color: #999;
}
