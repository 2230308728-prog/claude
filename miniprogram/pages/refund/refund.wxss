/* pages/refund/refund.wxss */

/* 卡片 */
.card {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.required {
  margin-left: 8rpx;
  color: #fa5151;
  font-size: 28rpx;
}

.optional {
  margin-left: auto;
  font-size: 24rpx;
  color: #999;
}

/* 订单信息 */
.order-info {
  padding: 32rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  word-break: break-all;
}

.info-value.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #fa5151;
}

/* 退款原因 */
.reason-list {
  padding: 0 32rpx 32rpx;
}

.reason-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.reason-item:last-child {
  border-bottom: none;
}

.reason-text {
  font-size: 30rpx;
  color: #333;
}

.reason-item.active .reason-text {
  color: #07c160;
}

.reason-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: #07c160;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}

/* 表单 */
.form-section {
  padding: 32rpx;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 退款金额 */
.refund-amount {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
}

.amount-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #fa5151;
}

.refund-tip {
  padding: 0 32rpx 32rpx;
  font-size: 24rpx;
  color: #999;
}

/* 须知 */
.notice {
  margin: 20rpx;
  padding: 24rpx;
  background-color: #fff7e8;
  border-radius: 12rpx;
}

.notice-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #ff976a;
  margin-bottom: 16rpx;
}

.notice-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #ff976a;
  line-height: 1.5;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.btn-submit {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  text-align: center;
}

.btn-submit[disabled] {
  background: #ccc;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #999;
}
