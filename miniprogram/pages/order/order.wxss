/* pages/order/order.wxss */

/* 订单状态卡片 */
.order-status-card {
  display: flex;
  align-items: center;
  padding: 60rpx 32rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  margin-bottom: 20rpx;
}

.order-status-card.status-PENDING {
  background: linear-gradient(135deg, #ff976a 0%, #f76c0f 100%);
}

.order-status-card.status-PAID,
.order-status-card.status-CONFIRMED {
  background: linear-gradient(135deg, #1989fa 0%, #0066cc 100%);
}

.order-status-card.status-COMPLETED {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
}

.order-status-card.status-CANCELLED,
.order-status-card.status-REFUNDED {
  background: linear-gradient(135deg, #999 0%, #666 100%);
}

.status-icon {
  font-size: 88rpx;
  margin-right: 24rpx;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 卡片 */
.card {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.card-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 产品信息 */
.product-info {
  display: flex;
  padding: 32rpx;
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.product-detail {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-meta {
  margin-top: 20rpx;
}

.product-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #fa5151;
}

/* 订单信息 */
.order-info,
.participant-info {
  padding: 32rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  word-break: break-all;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.btn-action {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-pay {
  background-color: #07c160;
  color: #fff;
}

.btn-confirm {
  background-color: #1989fa;
  color: #fff;
}

.btn-contact {
  background-color: #fff;
  color: #07c160;
  border: 1rpx solid #07c160;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #999;
}
