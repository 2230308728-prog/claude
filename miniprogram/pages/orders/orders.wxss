/* pages/orders/orders.wxss */

/* 状态标签 */
.status-tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #07c160;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
}

.order-item {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-no {
  font-size: 26rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

.order-status.status-PENDING {
  color: #ff976a;
}

.order-status.status-PAID,
.order-status.status-CONFIRMED {
  color: #1989fa;
}

.order-status.status-COMPLETED {
  color: #07c160;
}

.order-status.status-CANCELLED,
.order-status.status-REFUNDED {
  color: #999;
}

/* 产品信息 */
.order-product {
  display: flex;
  padding: 24rpx 32rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-meta {
  margin-top: 8rpx;
}

.product-date {
  font-size: 24rpx;
  color: #999;
}

.product-participant {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
}

.product-participant .age {
  color: #999;
  font-size: 24rpx;
}

.product-price {
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  margin-left: 20rpx;
}

.product-price .price {
  font-size: 36rpx;
  font-weight: bold;
  color: #fa5151;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
  border-top: 1rpx solid #f5f5f5}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-actions {
  display: flex;
  gap: 16rpx;
}

.btn-action {
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  border: 1rpx solid #ddd;
  background-color: #fff;
}

.btn-cancel {
  color: #666;
}

.btn-pay {
  background-color: #07c160;
  color: #fff;
  border-color: #07c160;
}

.btn-confirm {
  background-color: #1989fa;
  color: #fff;
  border-color: #1989fa;
}

.btn-detail {
  color: #666;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-go-shop {
  padding: 20rpx 60rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

/* 加载更多 */
.load-more,
.no-more {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
