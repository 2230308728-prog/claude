/* pages/profile/profile.wxss */

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  padding: 60rpx 32rpx 40rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  margin-right: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.user-phone {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.btn-login {
  padding: 12rpx 48rpx;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  margin-top: 12rpx;
}

/* 订单快捷入口 */
.order-entrance {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.entrance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.entrance-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.entrance-more {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.entrance-more .icon {
  margin-left: 8rpx;
  font-size: 32rpx;
}

.entrance-list {
  display: flex;
  padding: 32rpx 0;
}

.entrance-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.entrance-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 12rpx;
}

.entrance-text {
  font-size: 26rpx;
  color: #666;
}

.entrance-badge {
  position: absolute;
  top: -8rpx;
  right: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  background-color: #fa5151;
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  border-radius: 16rpx;
}

/* 功能菜单 */
.menu-list {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 40rpx;
  color: #ccc;
}

/* 退出登录 */
.logout-section {
  padding: 0 32rpx 40rpx;
}

.btn-logout {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  color: #fa5151;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: 1rpx solid #eee;
  text-align: center;
}

/* 版本信息 */
.version-info {
  padding: 40rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #ccc;
}
