/* pages/coupons/coupons.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 100rpx;
}

/* Tabs */
.tabs {
  display: flex;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #1890ff;
  border-radius: 3rpx;
}

/* 优惠券列表 */
.coupons-list {
  padding: 20rpx;
}

.coupon-item {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  position: relative;
}

.coupon-item.disabled {
  opacity: 0.6;
}

/* 左侧金额区域 */
.coupon-left {
  width: 220rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
  position: relative;
}

.coupon-item.disabled .coupon-left {
  background: linear-gradient(135deg, #999 0%, #bbb 100%);
}

.coupon-amount {
  display: flex;
  align-items: baseline;
  color: #fff;
}

.amount-symbol {
  font-size: 28rpx;
  margin-right: 4rpx;
}

.amount-value {
  font-size: 64rpx;
  font-weight: bold;
  line-height: 1;
}

.amount-unit {
  font-size: 28rpx;
  margin-left: 4rpx;
}

.coupon-condition {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 10rpx;
}

/* 中间虚线 */
.coupon-divider {
  width: 4rpx;
  position: relative;
  background-color: #f8f8f8;
}

.divider-dashed {
  position: absolute;
  top: 30rpx;
  bottom: 30rpx;
  left: 0;
  width: 2rpx;
  border-left: 2rpx dashed #ff8e8e;
}

.coupon-item.disabled .divider-dashed {
  border-left-color: #bbb;
}

.divider-top,
.divider-bottom {
  width: 16rpx;
  height: 16rpx;
  background-color: #f8f8f8;
  border-radius: 50%;
  position: absolute;
  left: -6rpx;
}

.divider-top {
  top: -8rpx;
}

.divider-bottom {
  bottom: -8rpx;
}

/* 右侧信息区域 */
.coupon-right {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.coupon-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.coupon-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.coupon-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.coupon-actions {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.btn-use {
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  border: none;
}

.btn-use::after {
  border: none;
}

.status-tag {
  padding: 8rpx 20rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
}

.status-used {
  background-color: #52c41a;
  color: #fff;
}

.status-expired {
  background-color: #999;
  color: #fff;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 60rpx;
}

.btn-go-shop {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-go-shop::after {
  border: none;
}
