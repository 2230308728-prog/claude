/* pages/order-confirm/order-confirm.wxss */

/* 卡片 */
.card {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.required {
  font-size: 24rpx;
  color: #fa5151;
}

.optional {
  font-size: 24rpx;
  color: #999;
}

/* 产品信息 */
.product-info {
  display: flex;
  padding: 32rpx;
}

.product-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.product-detail {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #fa5151;
}

.product-stock {
  font-size: 24rpx;
  color: #07c160;
}

.product-stock.out-of-stock {
  color: #999;
}

/* 表单 */
.form-section {
  padding: 32rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #333;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.picker-view {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-view .placeholder {
  color: #999;
}

.picker-view .arrow {
  font-size: 40rpx;
  color: #ccc;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 优惠券 */
.coupon-section {
  padding: 32rpx;
}

.coupon-selected {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: linear-gradient(135deg, #fff5f5 0%, #fff 100%);
  border: 1rpx solid #ffebd6;
  border-radius: 12rpx;
  padding: 24rpx;
}

.coupon-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.coupon-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.coupon-desc {
  font-size: 24rpx;
  color: #ff976a;
}

.coupon-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

.coupon-discount {
  font-size: 32rpx;
  font-weight: bold;
  color: #fa5151;
}

.btn-clear {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.coupon-empty {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #f7f7f7;
  border-radius: 12rpx;
}

.coupon-hint {
  font-size: 28rpx;
  color: #666;
}

.coupon-empty .arrow {
  font-size: 40rpx;
  color: #ccc;
}

.discount-label {
  color: #ff976a;
}

.discount-value {
  color: #fa5151;
}

/* 费用明细 */
.cost-detail {
  padding: 32rpx;
}

.cost-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.cost-row.total {
  border-top: 1rpx solid #f5f5f5;
  margin-top: 20rpx;
  padding-top: 30rpx;
}

.cost-label {
  font-size: 28rpx;
  color: #666;
}

.cost-row.total .cost-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.cost-value {
  font-size: 28rpx;
  color: #333;
}

.total-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #fa5151;
}

/* 服务协议 */
.agreement {
  padding: 32rpx;
}

.agreement-label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.agreement-label checkbox {
  margin-right: 12rpx;
}

.agreement-label .link {
  color: #1989fa;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #fff;
  border-top: 1rpx solid #eee;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.price-info {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 44rpx;
  font-weight: bold;
  color: #fa5151;
}

.btn-submit {
  min-width: 240rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  text-align: center;
}

.btn-submit[disabled] {
  background: #ccc;
}

/* 加载中 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  color: #999;
}
