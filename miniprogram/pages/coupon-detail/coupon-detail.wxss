/* pages/coupon-detail/coupon-detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 150rpx;
}

/* 优惠券卡片 */
.coupon-card {
  display: flex;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}

/* 左侧金额区域 */
.coupon-left {
  width: 240rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.coupon-amount {
  display: flex;
  align-items: baseline;
  color: #fff;
}

.amount-symbol {
  font-size: 32rpx;
  margin-right: 4rpx;
}

.amount-value {
  font-size: 72rpx;
  font-weight: bold;
  line-height: 1;
}

.amount-unit {
  font-size: 32rpx;
  margin-left: 4rpx;
}

.coupon-condition {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 16rpx;
}

/* 中间虚线 */
.coupon-divider {
  width: 4rpx;
  position: relative;
  background-color: #f8f8f8;
}

.divider-dashed {
  position: absolute;
  top: 40rpx;
  bottom: 40rpx;
  left: 0;
  width: 2rpx;
  border-left: 2rpx dashed #ff8e8e;
}

.divider-top,
.divider-bottom {
  width: 16rpx;
  height: 16rpx;
  background-color: #f8f8f8;
  border-radius: 50%;
  position: absolute;
  left: -6rpx;
}

.divider-top {
  top: -8rpx;
}

.divider-bottom {
  bottom: -8rpx;
}

/* 右侧信息区域 */
.coupon-right {
  flex: 1;
  padding: 30rpx;
}

.coupon-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.coupon-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.coupon-time {
  font-size: 24rpx;
  color: #999;
}

/* 详情区域 */
.detail-section {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  color: #999;
  min-width: 180rpx;
}

.detail-value {
  flex: 1;
  color: #333;
}

/* 进度区域 */
.progress-section {
  background-color: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #666;
}

.progress-text {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 500;
}

.progress-bar {
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e8e 100%);
  border-radius: 8rpx;
  transition: width 0.3s;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.btn-claim {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
}

.btn-claim::after {
  border: none;
}

.btn-claim[disabled] {
  background: #ccc;
  color: #999;
}
