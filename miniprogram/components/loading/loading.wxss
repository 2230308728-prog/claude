/* components/loading/loading.wxss */

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.loading.inline {
  flex-direction: row;
  padding: 20rpx;
  gap: 20rpx;
}

.spinner {
  display: flex;
  gap: 12rpx;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #07c160;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) {
  animation-delay: -0.32s;
}

.dot:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.loading.inline .text {
  margin-top: 0;
}
