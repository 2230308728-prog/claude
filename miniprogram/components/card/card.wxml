<!--components/card/card.wxml-->
<view class="card {{className}}">
  <view class="card-header" wx:if="{{title || $slots.header}}">
    <slot name="header">
      <text class="card-title">{{title}}</text>
      <view class="card-extra" wx:if="{{extra}}">
        <text>{{extra}}</text>
      </view>
    </slot>
  </view>

  <view class="card-body" wx:if="{{content || $slots.default}}">
    <slot>{{content}}</slot>
  </view>

  <view class="card-footer" wx:if="{{footer || $slots.footer}}">
    <slot name="footer">{{footer}}</slot>
  </view>
</view>
