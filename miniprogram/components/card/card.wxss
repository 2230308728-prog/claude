/* components/card/card.wxss */

.card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-extra {
  font-size: 26rpx;
  color: #999;
}

.card-body {
  padding: 32rpx;
}

.card-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f5f5f5;
  background-color: #fafafa;
}
