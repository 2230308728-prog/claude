/**app.wxss**/
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 16px;
  line-height: 1.5;
  color: #333;
}

/* 容器 */
.container {
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 按钮样式 */
.btn-primary {
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
  border: none;
}

.btn-primary:active {
  background-color: #06ad56;
}

.btn-secondary {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 24rpx 32rpx;
  font-size: 32rpx;
}

.btn-block {
  width: 100%;
}

.btn-small {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
}

/* 卡片 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 列表 */
.list-item {
  background-color: #fff;
  padding: 32rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-item:last-child {
  border-bottom: none;
}

/* 文本样式 */
.text-primary {
  color: #07c160;
}

.text-secondary {
  color: #999;
  font-size: 28rpx;
}

.text-danger {
  color: #fa5151;
}

.text-warning {
  color: #ff976a;
}

.text-muted {
  color: #ccc;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.tag-primary {
  background-color: #e8f7ef;
  color: #07c160;
}

.tag-warning {
  background-color: #fff7e8;
  color: #ff976a;
}

.tag-danger {
  background-color: #ffe8e8;
  color: #fa5151;
}

.tag-info {
  background-color: #e8f4ff;
  color: #1989fa;
}

/* 间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.mr-10 { margin-right: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }

/* Flex 布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 加载和空状态 */
.loading {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 20rpx;
}
